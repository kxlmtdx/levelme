<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - levelme</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/levelme.styles.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("https://i.postimg.cc/rw2frLjF/shooting-star.png")" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="main-navbar">
            <div class="container-fluid navbar-container">
                <img src="https://i.postimg.cc/Fs1jHFLJ/shooting-star-fotor.png" alt="levelme logo" class="brand-logo" style="margin: 0px 5px 0px 30px">
                <a class="navbar-brand"style="color: #fff; font-weight: bold; font-family: 'Arial Rounded MT'; font-size: 26px" asp-area="" asp-controller="Home" asp-action="Index">
                    levelme.xyz
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                    <ul class="navbar-nav ms-auto right-nav-items" style="margin-right: 30px">
                        <li class="nav-item">
                            <a class="btn" style="background: #462cca; color: white; width: 100px; height: 38px" asp-area="Support" asp-controller="Support" asp-action="Support">Вход</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
